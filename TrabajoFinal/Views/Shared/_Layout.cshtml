<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/Content/assets/images/favicon_1.ico">

    <title>EVA360 - @ViewBag.Title </title>

    @Styles.Render("~/bundles/css")

    <script src="~/Content/assets/js/modernizr.min.js"></script>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','../../../www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-69506598-1', 'auto');
          ga('send', 'pageview');
    </script>
</head>

<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        @{Html.RenderPartial("_TopBar"); }
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        @{Html.RenderPartial("_LeftSidebar");}
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">

            @{ Html.RenderPartial("_FlashMessage");}
            <!-- Start content -->
            <div class="content">

                @RenderBody()

            </div>

             <!-- content -->
            <footer class="footer text-right">
                © 2017. All rights reserved.
            </footer>

        </div>
        <!-- ============================================================== -->
        <!-- End Right content here -->
    </div>
    <!-- END wrapper -->

    <script> var resizefunc = []; </script>

    @Scripts.Render("~/bundles/js")

    <script type="text/javascript">
            jQuery(document).ready(function($) {
                $('.counter').counterUp({
                    delay: 100,
                    time: 1200
                });
                $(".knob").knob();
            });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>